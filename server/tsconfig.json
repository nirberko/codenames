{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "build",
    "strict": true,
    "noImplicitAny": false,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "@common/*": ["../common/*"] // Needed both tsc (ts compile for prod/staging)
    },
    "inlineSourceMap": true,
    "inlineSources": true
  }
}
